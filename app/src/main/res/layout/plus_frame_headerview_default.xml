<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_80"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ptr_header_image"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size_5"
        android:layout_marginLeft="@dimen/size_100"
        android:src="@drawable/draw_vector_loading_ptr_icon_primary"
        />

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ptr_header_image"
        android:layout_marginLeft="@dimen/size_40"
        android:layout_centerVertical="true"
        android:minWidth="@dimen/size_100">

        <TextView
            android:id="@+id/ptr_header_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:text="松开加载数据"
            android:textColor="#333333"
            android:textSize="@dimen/text_21_0"
            />

        <TextView
            android:id="@+id/ptr_header_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ptr_header_hint"
            android:layout_marginTop="@dimen/size_5"
            android:paddingLeft="0dp"
            android:text="@string/recycler_hint_head_time"
            android:textColor="#999999"
            />
    </RelativeLayout>
</RelativeLayout>